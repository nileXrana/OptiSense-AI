generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// model means collection :
model users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  credits Int
  tokenUsed Int
  picture String
  orderId String? // by default it is null
}

model userAiAssistants {
  ID   String @id @default(auto()) @map("_id") @db.ObjectId
  id               Int
  name             String
  title            String
  image            String
  instruction      String
  userInstruction  String
  sampleQuestions  String[]
  uid              String
}

model feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  no        Int
  name      String
  feedback  String
  rating    Int
  avatar    String
  createdAt DateTime @default(now())
}